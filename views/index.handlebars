{{> addUser-btn}}
<table class='table table-bordered'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'>
        #
      </th>
      <th scope='col'>
        FirstName
      </th>
      <th scope='col'>
        LastName
      </th>
      <th scope='col'>
        Email
      </th>
      <th scope='col'>
        Phone
      </th>
      <th scope='col' class='text-center'>
        Action
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <th scope='row'>
          {{this.user_id}}
        </th>
        <td>
          {{this.first_name}}
        </td>
        <td>
          {{this.last_name}}
        </td>
        <td>
          {{this.email}}
        </td>
        <td>
          {{this.phone}}
        </td>
        <td class='text-center'>
          <a type='button' href='/viewUser/{{this.user_id}}' class='btn btn-small btn-light'>
            View
          </a>
          <a type='button' href='/editUser/{{this.user_id}}' class='btn btn-small btn-light'>
            Edit
          </a>
          <a type='button' href='/{{this.user_id}}' class='btn btn-small btn-light'>
            Delete
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>